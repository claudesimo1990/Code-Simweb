
{% include 'includes/settings.html.twig' %}

<section id="skills" class="{% if pimcore_checkbox('background').isChecked() %} about section-bg my-4 {% else%} skills {% endif %}">
    <div class="container aos-init aos-animate" data-aos="fade-up">

        <div class="section-title">
            {% if editmode %}
                <h3>{{ pimcore_input("title") }}</h3>
                <h3>{{ pimcore_input("subtitle") }}</h3>
                <p>{{ pimcore_input("text") }}</p>
            {% else %}
                <h2>{{ pimcore_input("title").render }}</h2>
                <h3>{{ pimcore_input("subtitle").render }}</h3>
                <p>{{ pimcore_input("text").render }}</p>
            {% endif %}
        </div>

        <div class="row">
            {% for skill in skills %}
                <div class="progress">
                    <span class="skill">HTML <i class="val">100%</i></span>
                    <div class="progress-bar-wrap">
                        <div class="progress-bar" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%;"></div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>