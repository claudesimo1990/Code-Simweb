
{% include 'includes/settings.html.twig' %}

<section id="services" class="{% if pimcore_checkbox('background').isChecked() %} about section-bg my-4 {% else%} services {% endif %}">
    <div class="container aos-init aos-animate" data-aos="fade-up">

        <div class="section-title">
            {% if editmode %}
                <h3>{{ pimcore_input("title") }}</h3>
                <h3>{{ pimcore_input("subtitle") }}</h3>
                <p>{{ pimcore_input("text") }}</p>
            {% else %}
                <h2>{{ pimcore_input("title").render }}</h2>
                <h3>{{ pimcore_input("subtitle").render }}</h3>
                <p>{{ pimcore_input("text").render }}</p>
            {% endif %}
        </div>

        <div class="row">
            {% for project in projects %}
                {% set thumbnail = project.image.getThumbnail("card") %}
                <div class="col-md-4 col-xs-12">
                    <div class="card h-100 border-0 shadow">
                        <div class="card-img-top">
                            <div class="embed-responsive embed-responsive-4by3">
                                <div class="embed-responsive-item">
                                    <img src="{{ thumbnail }}" alt="" class="img-fluid w-100" />
                                </div>
                            </div>
                        </div>
                        <div class="card-title fw-bolder text-center text-success text-uppercase">{{ project.name }}</div>
                        <div class="card-body">
                            <p>{{ project.content }}</p>
                            <a href="{{ project.link }}" class="card-link">Mehr</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>